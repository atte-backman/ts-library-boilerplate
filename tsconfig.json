{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        }
    },
    "exclude": [
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "silent": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },

    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
