{
  "name": "ts-library-boilerplate",
  "version": "0.0.0",
  "description": "A boilerplate for TypeScript libraries with TSLint, ESLint, Gulp, Karma, Jasmine, Babel and Webpack.",
  "scripts": {
    "build": "NODE_ENV=production ./node_modules/webpack/bin/webpack.js --colors",
    "build:all": "npm run build && npm run build:dev && npm test && npm run build:docs",
    "build:coverage": "./node_modules/gulp/bin/gulp.js test:coverage",
    "build:docs": "./node_modules/typedoc/bin/typedoc --readme none --exclude ./test/ --hideGenerator --exclude **/*.spec.ts --excludePrivate --tsconfig tsconfig.json --target \"ES6\" --out ./docs/docs ./src/",
    "build:dev": "NODE_ENV=development ./node_modules/webpack/bin/webpack.js --colors",
    "postversion": "git push && git push --tags",
    "preversion": "npm run reinstall && npm test",
    "start": "NODE_ENV=development ./node_modules/webpack/bin/webpack.js --colors --watch",
    "test": "NODE_ENV=test xvfb-run ./node_modules/gulp/bin/gulp.js test --singleRun",
    "test:tdd:head": "NODE_ENV=test ./node_modules/gulp/bin/gulp.js test",
    "test:tdd": "NODE_ENV=test xvfb-run ./node_modules/gulp/bin/gulp.js test --tddBrowser",
    "version": "npm run build && npm run build:dev && git add -A dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atte-backman/ts-library-boilerplate.git"
  },
  "author": "Atte Backman <atte.backman@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atte-backman/ts-library-boilerplate/issues"
  },
  "homepage": "https://github.com/atte-backman/ts-library-boilerplate#readme",
  "devDependencies": {
    "@types/bluebird": "~3.5.0",
    "@types/isomorphic-fetch": "0.0.33",
    "@types/jasmine": "~2.5.45",
    "awesome-typescript-loader": "~3.1.2",
    "babel-core": "~6.24.0",
    "babel-eslint": "~7.1.1",
    "babel-loader": "~6.4.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-preset-es2015": "^6.24.0",
    "eslint": "^3.17.1",
    "eslint-loader": "^1.6.3",
    "fetch-mock": "^5.9.4",
    "git-guppy": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-filter": "^5.0.0",
    "gulp-tslint": "^7.1.0",
    "isomorphic-fetch": "^2.2.1",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine-core": "^2.5.2",
    "jsoneditor": "^5.5.11",
    "karma": "~1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "~1.1.0",
    "karma-source-map-support": "^1.2.0",
    "karma-webpack": "~2.0.2",
    "lodash": "^4.17.4",
    "remap-istanbul": "^0.9.1",
    "tslint": "^4.5.1",
    "tslint-loader": "^3.4.3",
    "typedoc": "~0.5.7",
    "typedoc-plugin-external-module-name": "^1.0.8",
    "webpack": "~2.2.1",
    "webpack-merge": "~4.0.0",
    "yargs": "~7.0.2"
  }
}
